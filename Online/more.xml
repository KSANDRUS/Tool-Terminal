<?xml version="1.0" encoding="UTF-8" ?>
<group>
    <group>
        <picker>
            <title>Kiểm tra giao diện lựa chọn đơn lẻ</title>
            <summary sh="echo -n 'Hiện đã được chọn：'; getprop xxx.xxx.xxx" />
            <options>
                <option value="123">kiểm tra 123</option>
                <option value="234">kiểm tra 234</option>
            </options>
            <get>getprop xxx.xxx.xxx</get>
            <set>setprop xxx.xxx.xxx $state</set>
        </picker>
        <picker options-sh="echo 'a|Lựa chọn A'; echo 'b|Lựa chọn B'">
            <title>Kiểm tra một lựa chọn (các tùy chọn xuất ra bằng tập lệnh)</title>
            <summary sh="echo -n 'Hiện đã được chọn：'; getprop xxx.xxx.xxx3" />
            <get>getprop xxx.xxx.xxx3</get>
            <set>setprop xxx.xxx.xxx3 "$state"</set>
        </picker>

        <picker multiple="multiple" options-sh="echo 'a|Lựa chọn A'; echo 'b|Lựa chọn B'">
            <title>Kiểm tra giao diện nhiều lựa chọn</title>
            <get>getprop xxx.xxx.xxx3</get>
            <summary sh="echo -n 'Hiện đã được chọn：'; getprop xxx.xxx.xxx3" />
            <set>
                echo 'Chọn mục：'

                for item in $state; do
                echo $item
                done

                echo ''
                setprop xxx.xxx.xxx3 "$state"
            </set>
        </picker>
    </group>

    <group title="Dấu phân tách nhiều lựa chọn tùy chỉnh">
        <picker multiple="multiple" separator=",">
            <title>Ẩn biểu tượng thanh trạng thái</title>
            <desc>Đặt các biểu tượng thanh trạng thái ẩn</desc>
            <options>
                <option value="mobile">Tín hiệu điện thoại di động</option>
                <option value="volte">VoLTE</option>
                <option value="airplane">Chế độ máy bay</option>
                <option value="location">Biểu tượng vị trí</option>
                <option value="nfc">NFC</option>
                <option value="vpn">VPN</option>
                <option value="bluetooth">Bluetooth</option>
                <option value="volume">Âm lượng / tắt tiếng</option>
                <option value="zen">Chế độ không làm phiền</option>
                <option value="alarm_clock">Đồng hồ báo thức</option>
                <option value="headset">tai nghe</option>
                <option value="ime">Đầu vào</option>
            </options>
            <get>
                settings get secure icon_blacklist
            </get>
            <set>
                settings put secure icon_blacklist "$state"
            </set>
        </picker>
    </group>
</group>
